

@model IEnumerable<HostelApplication.Controllers.displayallocation>

@{
    ViewData["Title"] = "displayallocation Page";
    Layout = "~/Views/Shared/LayoutNew.cshtml";
}
<br />
<br />
<img style="margin-top: 80px;" src="~/images/" alt="" width="180" height="150">
<img style="margin-top: 80px; float:right;" src="~/images/" alt="" width="180" height="150">
<CENTER><h3 style="margin-top: 30px; font-size: 45px;">ADELEKE'S' UNIVERSITY HOSTEL APPLICATION   @*@DateTime.Now.ToString("MMMM, yyyy")*@ </h3></CENTER>
<CENTER><h4 style="margin-top: 30px; font-size:55px;">HOSTEL ALLOCATION  </h4></CENTER>
<h4 style="text-align :right;">@DateTime.Now.ToString("dd MMMM, yyyy"), @DateTime.Now.ToShortTimeString()</h4>
<hr />

<div class="panel-body">
    <div class="row">

    </div>

    <hr />
    <div class="form-border" style="margin-top:40px;">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-hover" id="jayb1" border="1">
                <thead style="background-color:azure;">
                    <tr bgcolor="yellow" style="color:blue; font-size:35px;">
                        <th>
                            @Html.DisplayNameFor(model => model.MatricNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hall)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Block)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Room)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Bunk)
                        </th>                        
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExpireDate)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td bgcolor="green" style="color:white; font-size:35px;">
                                @Html.DisplayFor(modelItem => item.MatricNo)
                            </td>

                            <td style="color: black; font-size: 35px;">
                                @Html.DisplayFor(modelItem => item.Hall)
                            </td>
                            <td style="color: black; font-size: 35px;">
                                @Html.DisplayFor(modelItem => item.Block)
                            </td>
                            <td style="color: black; font-size: 35px;">
                                @Html.DisplayFor(modelItem => item.Room)
                            </td>
                            <td style="color: black; font-size: 35px;">
                                @Html.DisplayFor(modelItem => item.Bunk)
                            </td>

                            <td style="color:black; font-size:35px;">
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td style="color:black; font-size:35px;">
                                @Html.DisplayFor(modelItem => item.ExpireDate)
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <center> <p style="color:black; font-size:35px;">No Hostel is created</p></center>
        }
    </div>

    <script>
            $(document).ready(function () {
                $("#jayb1").DataTable();

                $("#dialog-form").dialog({
                    modal: true
                });
            });



    </script>

    @section Scripts{
        <script>


                $(document).ready(function () {
                    $("#jayb1").DataTable({
                        dom: 'Bfrtip',
                        buttons: [
                            'excel', 'pdf', 'print'
                        ]
                    });

                    $("#dialog-form").dialog({
                        modal: true
                    });

                });
        </script>
    }
